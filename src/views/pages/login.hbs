<div class='login-box'>
  <h2>Login</h2>
  <form id='login' action='/api/usuario/login' method='POST'>
    <div class='user-box'>
      <input type='text' name='user' required />
      <label>Username</label>
    </div>
    <div class='user-box'>
      <input type='password' name='pass' required />
      <label>Password</label>
    </div>

    <button class='btn' type='submit'>

      Log in</button>
  </form>
</div>