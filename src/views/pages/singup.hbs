<div class='login-box'>
  <h2>Sing Up</h2>
  <form id='register' action='/api/usuario/singup' method='POST'>
    <div class='user-box'>
      <input type='text' name='user' required />
      <label>Username</label>
    </div>
    <div class='user-box'>
      <input type='email' name='email' required />
      <label>Email</label>
    </div>
    <div class='user-box'>
      <input type='password' name='pass' required />
      <label>Password</label>
    </div>

    <button class='btn' type='submit'>

      Sign Up</button>
  </form>
</div>